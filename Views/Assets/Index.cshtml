@model IEnumerable<ITAssetManagement.Models.Asset>

@{
  ViewData["Title"] = "Assets";
}

<h2>Assets</h2>

<p>
  <a asp-action="Create" class="btn btn-primary">Add Asset</a>
</p>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Asset Tag</th>
      <th>Name</th>
      <th>Category</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>@item.AssetTag</td>
        <td>@item.Name</td>
        <td>@item.Category</td>
        <td>@item.Status</td>
        <td>
          <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
          <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
          <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>