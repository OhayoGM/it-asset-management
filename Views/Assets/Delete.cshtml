@model ITAssetManagement.Models.Asset

@{
  ViewData["Title"] = "Delete Asset";
}

<h2>Delete Asset</h2>

<h4>Are you sure you want to delete this asset?</h4>

<dl class="row">
  <dt class="col-sm-2">Asset Tag</dt>
  <dd class="col-sm-10">@Model.AssetTag</dd>

  <dt class="col-sm-2">Name</dt>
  <dd class="col-sm-10">@Model.Name</dd>

  <dt class="col-sm-2">Category</dt>
  <dd class="col-sm-10">@Model.Category</dd>
</dl>

<form asp-action="Delete">
  <input type="hidden" asp-for="Id" />
  <button type="submit" class="btn btn-danger">Delete</button>
  <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>